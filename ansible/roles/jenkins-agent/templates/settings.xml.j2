<settings>
    <servers>
        <server>
            <id>nexus</id>
            <username>{{ nexus_user }}</username>
            <password>{{ nexus_user_pass }}</password>
        </server>
        <server>
            <id>nexus-releases</id>
            <username>{{ nexus_user }}</username>
            <password>{{ nexus_user_pass }}</password>
   </server>
    </servers>
    <mirrors>
        <mirror>
            <!--This sends everything else to /public -->
            <id>nexus</id>
            <mirrorOf>*</mirrorOf>
            <url>http://{{ nexus_repo_url }}/repository/maven-proxy-repo/</url>
        </mirror>
    </mirrors>
</settings>